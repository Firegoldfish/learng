/* pages/index/index.wxss */
.swiper-box{
  height: 450rpx;
}
.swiper-box image{
  width: 100%;
}
.tab{
  display:flex;
  width: 100%;
  height: 50px;
  line-height: 50px; 
  border-bottom: 2px solid #e6e6e6;

}
.tab view{
  flex: 1;
  text-align: center;
}
.active{
  color: red;
  border-bottom: 2px,red;
}
.perfectm{
  width: 100%;
  padding: 10px;
}
.title{
  color: #333;
  font-size:14px;
  margin-bottom: 10px;
}
.scroll-box{
  width: 100%;
  white-space: nowrap;
}
.scroll-item{
  display: inline-block;
  width: 100px;
}
.scroll-item image{
  width: 85px;
}
.film_name{
  font-size: 13px;
  width: 83px;
  color: #222;
  margin: 3px 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.shen{
  height: 115px;
  overflow: hidden;
}
